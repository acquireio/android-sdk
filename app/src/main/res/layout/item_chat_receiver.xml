<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/txtSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chat_sender"
        android:padding="10dp"
        android:text="Recent Conversations"
        android:textAppearance="@style/sHeader5AQR"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtUserChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="2 min"
        android:textAppearance="@style/SubTitleStyle"
        app:layout_constraintStart_toStartOf="@+id/txtSender"
        app:layout_constraintTop_toBottomOf="@+id/txtSender" />

</androidx.constraintlayout.widget.ConstraintLayout>