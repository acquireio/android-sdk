<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgSColor1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/txtSMasking"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:srcCompat="@drawable/ic_circle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgSColor2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/txtSMasking"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toEndOf="@+id/imgSColor1"
        app:srcCompat="@drawable/ic_circle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgSColor3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/txtSMasking"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toEndOf="@+id/imgSColor2"
        app:srcCompat="@drawable/ic_circle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgSColor4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/txtSMasking"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toEndOf="@+id/imgSColor3"
        app:srcCompat="@drawable/ic_circle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgSColor5"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/txtSMasking"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toEndOf="@+id/imgSColor4"
        app:srcCompat="@drawable/ic_circle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgSColor6"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/txtSMasking"
        android:padding="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toEndOf="@+id/imgSColor5"
        android:background="@drawable/ic_plus_round"
        app:srcCompat="@drawable/ic_plus" />

</RelativeLayout>